  sudo ufw allow 161:162/udp
  sudo ufw allow 5054/tcp
  sudo ufw allow 5052/tcp
  sudo ufw allow 11211/tcp
  sudo ufw allow 7253/tcp
  sudo ufw allow 7000/tcp
