sudo touch /etc/dnsmasq.resolv.conf
sudo bash -c 'echo "nameserver 192.166.1.180" > /etc/dnsmasq.resolv.conf'
sudo bash -c 'echo "RESOLV_CONF=/etc/dnsmasq.resolv.conf" >> /etc/default/dnsmasq'
sudo service dnsmasq restart


